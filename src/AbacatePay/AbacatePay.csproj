<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>AbacatePay</PackageId>
    <Version>1.0.0</Version>
    <Authors>AbacatePay Team / Ismael Ash</Authors>
    <Company>AbacatePay</Company>
    <Description>.NET SDK for AbacatePay API - A comprehensive payment solution for Brazil</Description>
    <PackageTags>payment;brazil;pix;fintech</PackageTags>
    <RepositoryUrl>https://github.com/abacatepay/dotnet-sdk</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <AssemblyTitle>AbacatePay .NET SDK</AssemblyTitle>
    <AssemblyDescription>.NET SDK for AbacatePay API</AssemblyDescription>
    <Copyright>Copyright Â© AbacatePay 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>


</Project>
